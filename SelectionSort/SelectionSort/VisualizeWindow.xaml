<Window x:Class="SelectionSort.VisualizeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SelectionSort"
        mc:Ignorable="d"
        Title="VisualizeWindow" Height="450" Width="800">
    <Grid HorizontalAlignment="Center" Name="visualiseGrid">
        <Button Name="nextButton" Content="Next" HorizontalAlignment="Left" VerticalAlignment="Top" Width="48" Click="NextButton_Click" Margin="227,348,0,0"/>
        <Button Name="playButton" Content="Play" HorizontalAlignment="Left" VerticalAlignment="Top" Width="68" Click="PlayButton_Click" Margin="154,348,0,0"/>
        <Slider Name="speedSlider" Minimum="100" TickFrequency="100" TickPlacement="BottomRight" Maximum="1000" HorizontalAlignment="Left" Margin="280,348,0,0" VerticalAlignment="Top" Width="168"/>
    </Grid>
</Window>
